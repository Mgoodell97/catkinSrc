<?xml version="1.0"?>
<launch>

  <arg name="subToR1Pose" default="True"/>
  <arg name="subToR2Pose" default="False"/>
  <arg name="subToR3Pose" default="False"/>
  <arg name="subToR4Pose" default="False"/>
  <arg name="subToR5Pose" default="False"/>

  <include file="$(find mocap_optitrack)/launch/mocap.launch"/>

  <param name = "subToR1Pose" value = "$(arg subToR1Pose)" />
  <param name = "subToR2Pose" value = "$(arg subToR2Pose)" />
  <param name = "subToR3Pose" value = "$(arg subToR3Pose)" />
  <param name = "subToR4Pose" value = "$(arg subToR4Pose)" />
  <param name = "subToR5Pose" value = "$(arg subToR5Pose)" />

  <!-- Robot_1 -->
  <group ns="Robot_1" if="$(eval subToR1Pose)">
    <rosparam param="waypoints_x">[1.5]</rosparam>
    <rosparam param="waypoints_y">[0.5]</rosparam>
    <rosparam param="waypoints_yaw">[0, 1.5]</rosparam>
    <rosparam param="waypoints_quaternion">[0, 0,1,0]</rosparam> #[x,y,z,w]
  </group>
  <!-- Robot_2 -->
  <group ns="Robot_2" if="$(eval subToR2Pose)">
    <rosparam param="waypoints_x">[2.7, 0.5]</rosparam>
    <rosparam param="waypoints_y">[2.0, 0.5]</rosparam>
    <rosparam param="waypoints_yaw">[0, 1.517]</rosparam>
    <rosparam param="waypoints_quaternion">[[0, 0,0,1]]</rosparam>
  </group>

  <!-- Robot_3 -->
  <group ns="Robot_3" if="$(eval subToR3Pose)">
    <rosparam param="waypoints_x">[0.5, 2.7]</rosparam>
    <rosparam param="waypoints_y">[1.5, 1.0]</rosparam>
    <rosparam param="waypoints_yaw">[0, 1.517]</rosparam>
    <rosparam param="waypoints_quaternion">[0, 0,0,1]</rosparam>
  </group>

  <!-- Robot_4 -->
  <group ns="Robot_4" if="$(eval subToR4Pose)">
    <rosparam param="waypoints_x">[2.7, 0.5]</rosparam>
    <rosparam param="waypoints_y">[1.0, 1.5]</rosparam>
    <rosparam param="waypoints_yaw">[0, 1.517]</rosparam>
    <rosparam param="waypoints_quaternion">[0, 0,0,1]</rosparam>
  </group>

  <!-- Robot_5 -->
  <group ns="Robot_5" if="$(eval subToR5Pose)">
    <rosparam param="waypoints_x">[1.0, 1.0]</rosparam>
    <rosparam param="waypoints_y">[1.0, 2.0]</rosparam>
    <rosparam param="waypoints_yaw">[0, 1.517]</rosparam>
    <rosparam param="waypoints_quaternion">[0, 0,0,1]</rosparam>
  </group>

</launch>
