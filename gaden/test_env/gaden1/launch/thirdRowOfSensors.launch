<!-- mission file for GADEN player -->

<launch>

    ### NODE Simulated Gas Sensor ###
    #--------------------------------
    # SENSOR MODELS:
    # MOX: TGS2620=0, TGS2600=1, TGS2611=2
    # PID: MiniRaeLite=30

    # First row of 5 X = 0.43m
    <node pkg="tf" type="static_transform_publisher" name="pid10_broadcaster" args="1.28 0.46 0.2 0 0 0 map pid10_frame 50" />
    <node pkg="tf" type="static_transform_publisher" name="pid11_broadcaster" args="1.28 0.91 0.2 0 0 0 map pid11_frame 50" />
    <node pkg="tf" type="static_transform_publisher" name="pid12_broadcaster" args="1.28 1.37 0.2 0 0 0 map pid12_frame 50" />
    <node pkg="tf" type="static_transform_publisher" name="pid13_broadcaster" args="1.28 1.83 0.2 0 0 0 map pid13_frame 50" />
    <node pkg="tf" type="static_transform_publisher" name="pid14_broadcaster" args="1.28 2.29 0.2 0 0 0 map pid14_frame 50" />


    # second row of 5 X = 0.85m
    #                X    Y    Z
    <group ns="PID__1_28__0_46__0_2">
        <node pkg="simulated_gas_sensor" type="simulated_gas_sensor" name="fake_pid" output="screen">
	        <param name="/sensor_model" value="30" />
	        <param name="/sensor_frame" value="pid10_frame" />
	        <param name="/fixed_frame" value="map"/>
        </node>
    </group>

    <group ns="PID__1_28__0_91__0_2">
        <node pkg="simulated_gas_sensor" type="simulated_gas_sensor" name="fake_pid" output="screen">
	        <param name="/sensor_model" value="30" />
	        <param name="/sensor_frame" value="pid11_frame" />
	        <param name="/fixed_frame" value="map"/>
        </node>
    </group>

    <group ns="PID__1_28__1_37__0_2">
        <node pkg="simulated_gas_sensor" type="simulated_gas_sensor" name="fake_pid" output="screen">
	        <param name="/sensor_model" value="30" />
	        <param name="/sensor_frame" value="pid12_frame" />
	        <param name="/fixed_frame" value="map"/>
        </node>
    </group>

    <group ns="PID__1_28__1_83__0_2">
        <node pkg="simulated_gas_sensor" type="simulated_gas_sensor" name="fake_pid" output="screen">
          <param name="/sensor_model" value="30" />
          <param name="/sensor_frame" value="pid13_frame" />
          <param name="/fixed_frame" value="map"/>
        </node>
    </group>

    <group ns="PID__1_28__2_29__0_2">
        <node pkg="simulated_gas_sensor" type="simulated_gas_sensor" name="fake_pid" output="screen">
          <param name="/sensor_model" value="30" />
          <param name="/sensor_frame" value="pid14_frame" />
          <param name="/fixed_frame" value="map"/>
        </node>
    </group>

    ### RQT PLOT Sensors ###
    #-----------------------
    <node pkg="rqt_plot" type="rqt_plot" name="rqt_plot3"  args="/PID__1_28__0_46__0_2/Sensor_reading/raw /PID__1_28__0_91__0_2/Sensor_reading/raw /PID__1_28__1_37__0_2/Sensor_reading/raw /PID__1_28__1_83__0_2/Sensor_reading/raw /PID__1_28__2_29__0_2/Sensor_reading/raw"/>


</launch>
